<%# 6M Direct shot in free throw %>
<% if (player_action.kind == 'Direct free throw') %>
  <td><%= "6 metre direct shot in free throw - #{player_action.result}" %></td>
<% end %>

<%# Counter attack %>
<% if (player_action.kind == 'Counter attack') %>
  <td><%= "Counter attack - #{player_action.result}" %></td>
<% end %>

<%# Double exclusion %>
<% if player_action.kind == 'Double exclusion' %>
  <td><%= "Double exclusion" %></td>
<% end %>

<%# Exclusion %>
<% if (player_action.kind == 'Exclusion' && player_action.position == 'C2M') %>
  <td><%= "Centre forward position exclusion" %></td>
<% end %>

<% if (player_action.kind == 'Exclusion' && player_action.position != 'C2M') %>
  <td><%= "Field exclusion" %></td>
<% end %>

<%# Extra player shot %>
<% if (player_action.kind == 'Extra player shot') %>
  <td><%= "Extra player shot - #{player_action.result}" %></td>
<% end %>

<%# Penalty foul %>
<% if (player_action.kind == 'Penalty foul') %>
  <td><%= "Penalty foul" %></td>
<% end %>

<%# Rebound %>
<% if (player_action.kind == 'Rebound') %>
  <td><%= "Rebound" %></td>
<% end %>

<%# Shot %>
<% if (player_action.kind == 'Shot' && player_action.position == 'C2M') %>
  <td><%= "Centre shot - #{player_action.result}" %></td>
<% end %>

<% if (player_action.kind == 'Shot' && player_action.position != 'C2M') %>
  <td><%= "Action shot - #{player_action.result}" %></td>
<% end %>

<%# Steal %>
<% if (player_action.kind == 'Steal' && player_action.position == 'C2M') %>
  <td><%= "Steal centre forward" %></td>
<% end %>

<% if (player_action.kind == 'Steal' && player_action.position != 'C2M') %>
  <td><%= "Steal" %></td>
<% end %>

<%# Turnover foul %>
<% if (player_action.kind == 'Turnover foul' && player_action.position == 'C2M') %>
  <td><%= "Turnover foul centre forward" %></td>
<% end %>

<% if (player_action.kind == 'Turnover foul' && player_action.position != 'C2M') %>
  <td><%= "Turnover foul" %></td>
<% end %>
