<div class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-8 col-md-8 mx-auto">
      <h1 class="fw-light"><%= current_user.name %>, create a new Game !</h1>
      <p class="lead text-muted">Pick a Team and start to play !</p>
    </div>

    <%= simple_form_for [@game] do |f| %>
      <div class="row gy-2 gx-3 justify-content-sm-center">
        <div class="col-auto">
          <%= f.input :date, placeholder: "Date", label: false, as: :string,
                      input_html: { data: { controller: "datepicker" }} %>
        </div>

        <div class="col-auto">
          <%= f.association :team, prompt: 'Team', label: false,
                            collection: current_user.teams %>
        </div>

        <div class="col-auto">
          <%= f.input :tournament, placeholder: "Tournament", label: false,
                      as: :string, required: false %>
        </div>
      </div>

      <div class="row gy-2 gx-3 justify-content-sm-center">
        <div class="col-auto">
          <%= f.input :location, placeholder: "Location", label: false, as: :string %>
        </div>

        <div class="col-auto">
          <%= f.input :round, placeholder: "Round", label: false, as: :string, required: false %>
        </div>
      </div>

      <div class="row gy-2 gx-3 justify-content-sm-center">
        <div class="col-auto">
          <%= f.submit "GOOOO!", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div style="margin-top: 25px; margin-bottom:25px">
      <hr>
    </div>
    <div class="">
      <%= link_to "Dashboard", dashboard_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>
