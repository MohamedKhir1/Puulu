<div class="d-flex justify-content-between" data-controller="visibility">
  <div class="row gy-2 gx-3 justify-content-sm-between" data-visibility-target="hideable">
    <div class="col-sm-4">
      <%= f.input :name, input_html: {data: {visibility_target: "nameInput"}} %>
    </div>

    <div class="col-sm-4">
      <%= f.input :nationality %>
    </div>

    <div class="col-sm-4">
      <%= f.input :birthdate, start_year: Time.now.year - 123, end_year: Time.now.year - 18, order: %i(year) %>
    </div>

    <div class="col-sm-4">
      <%= f.input :gender, collection: [['Female'], ['Male']] %>
    </div>

    <div class="col-sm-4">
      <%= f.input :handedness, collection: [['Ambidexterity'], ['Left-Handed'], ['Right-Handed']] %>
    </div>

    <div class="col-sm-4">
      <%= f.input :position, collection: [['Field Player'], ['Goalkeeper']] %>
    </div>

    <div class="col-sm-6">
      <%= f.input :description, as: :text, :input_html => { 'rows' => 1 } %>
    </div>

    <div class="col-sm-6">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="col-auto">
      <%= f.input :available %>
    </div>

    <%= f.hidden_field :_destroy %>
  </div>


  <div class="d-flex flex-grow-1">
    <p data-visibility-target="hideable" hidden>Player <span data-visibility-target="name"></span></p>
  </div>
    <a data-action="visibility#toggleTargets"><i class="fa-solid fa-arrow-down-up-across-line ms-3"></i></a>

  <div class="ms-3">
    <%= remove_associated_record(tag: :div) do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>

</div>
