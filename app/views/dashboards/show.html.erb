<%= render "shared/team_header" %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-3"></div>
    <div class="col-12 col-lg-9 ps-0">
      <ul class="nav nav-pills mb-3 bg-body-tertiary rounded-3" id="pills-tab" role="tablist">
        <li class="nav-item rounded " role="presentation">
          <button class="nav-link active" id="pills-stats-tab" data-bs-toggle="pill" data-bs-target="#pills-stats" type="button" role="tab" aria-controls="pills-stats" aria-selected="true">Stats</button>
        </li>

        <li class="nav-item" role="presentation">
          <button class="nav-link" id="pills-players-tab" data-bs-toggle="pill" data-bs-target="#pills-players" type="button" role="tab" aria-controls="pills-players" aria-selected="false">Players</button>
        </li>

        <li class="nav-item" role="presentation">
          <button class="nav-link" id="pills-results-tab" data-bs-toggle="pill" data-bs-target="#pills-results" type="button" role="tab" aria-controls="pills-results" aria-selected="false">Results</button>
        </li>
      </ul>
    </div>
  </div>

  <%# menu %>
  <div class="row">
    <div class="col-12 col-lg-3 position-sticky ">
      <div class="d-flex gap-1 flex-column">
        <%= link_to new_game_path, class: "btn btn-light" do %>
          New Game <i class="fa-solid fa-arrow-right" style="color: var(--bs-primary);"></i>
        <% end %>

        <%= link_to new_team_path, class: "btn btn-light" do %>
          New Team <i class="fa-solid fa-arrow-right" style="color: var(--bs-primary);"></i>
        <% end %>

        <%= link_to new_team_player_url(@team.id), class: "btn btn-light" do %>
          New Player <i class="fa-solid fa-arrow-right" style="color: var(--bs-primary);"></i>
        <% end %>
      </div>
    </div>

    <%# pages %>
    <div class="col-12 col-lg-9 pe-0">
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-stats" role="tabpanel" aria-labelledby="pills-stats-tab">
          <%= render "shared/all-stats_list" %>
        </div>

        <div class="tab-pane fade" id="pills-players" role="tabpanel" aria-labelledby="pills-players-tab">
          <%= form_with url: root_path, method: :get, html: {class:
          "mb-3", data: {search_players_target: "form"}} do |f| %>
            <div class="form-inputs">
              <%= f.select :two, [['Option 1',1],['Option 2',2]], class:%>

              <%= f.text_field :query,
                                class: "form-inputs",
                                placeholder: "Search for a Player",
                                value: params[:query],
                                data: {search_players_target: "input",
                                action: "keyup->search-players#search"} %>
            </div>
          <% end %>


         <%= render "shared/player-list" %>
        </div>

        <div class="tab-pane fade" id="pills-results" role="tabpanel" aria-labelledby="pills-results-tab">
          Results
        </div>
      </div>
    </div>
  </div>
</div>
